<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="8"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/cstm_hist_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1/12/1223"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_baseline_date_range_24" />

            <TextView
                android:id="@+id/cstm_hist_drug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panadol"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_baseline_medical_services_24" />

            <TextView
                android:id="@+id/cstm_hist_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Best Pharmacy"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_baseline_factory_24" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="4dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/cstm_hist_qty"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Qty: 3"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cstm_hist_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Price: 34555"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>